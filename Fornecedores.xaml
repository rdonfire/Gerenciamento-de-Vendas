<Window x:Class="Gerenciador_de_Vendas.Fornecedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gerenciador_de_Vendas"
        mc:Ignorable="d"
        Title="Fornecedores"
        Width="1420" Height="800"
        WindowState="Maximized">


    <Grid Margin="0,0,0,8">

        <Border BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3E7FD9"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid>
            <Grid>
                <Border BorderBrush="Black" BorderThickness="1" Margin="10,93,207,0" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="434*"/>
                            <ColumnDefinition Width="291*"/>
                            <ColumnDefinition Width="310*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Pesquisar" Grid.Column="0" Margin="10,-2,335,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" FontFamily="Tw Cen MT" Grid.ColumnSpan="2" Height="32"/>
                        <TextBox x:Name="txtProdutoPesquisar" Grid.Column="0" Margin="10,30,188,5" TextWrapping="Wrap" Grid.ColumnSpan="2" />
                        <Button x:Name="btnPesquisarProdutos" Grid.Column="3" Content="BtnPesquisar" Margin="119,25,32,8" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="553*"/>
                <ColumnDefinition Width="74*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="88*"/>
                <RowDefinition Height="657*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblDataHora" Content="Atualizando..." Style="{StaticResource EstiloDataeHora}" />
            <Button x:Name="btnSair" Content="_SAIR" TabIndex="3"  Style="{StaticResource EstiloBotaoSair}" Click="Button_Click" Margin="37,0,0,0" Grid.Column="1"/>
        </Grid>
        <Grid>
            <TabControl x:Name="tabControlPrincipal" Margin="10,197,207,26" SelectionChanged="tabControlPrincipal_SelectionChanged" >
                <TabItem Header="Fornecedores" TabIndex="0" Style="{StaticResource EstiloTabCaProdutos}">
                        <Grid Margin="10">
                        <DataGrid x:Name="GridPrincipal" AutoGenerateColumns="True"  d:ItemsSource="{d:SampleData ItemCount=1}" Margin="0,0,-4,0"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Incluir Fornecedor" TabIndex="1"  Style="{StaticResource EstiloTabCaProdutos}" Height="28" Margin="-2,0,-2,0" VerticalAlignment="Center">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="Auto" MinWidth="69.587"/>
                            <ColumnDefinition Width="299*"/>
                            <ColumnDefinition Width="146*"/>
                            <ColumnDefinition Width="280*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="ID" Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" />
                        <TextBox x:Name="txtID" Grid.Row="0" Grid.Column="1" Margin="5,5,197,5" IsReadOnly="True"/>

                        <Label Content="CNPJ" Grid.Row="1" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtCnpj" Grid.Row="1" Grid.Column="1" MaxLength="14" Margin="5,5,5,5"/>

                        <Label Content="Razao Social" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtNomeFornecedor" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Margin="5,5,5,5"/>

                        <Label Content="Endereço" Grid.Row="3" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtEndereco" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,5,10,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                        <Label Content="Complemento" Grid.Row="3" Grid.Column="4" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtComplemento" Grid.Row="3" Grid.Column="5"  Margin="5,5,10,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                        <Label Content="Bairro" Grid.Row="4" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtBairro" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                        <Label Content="Estado" Grid.Row="4" Grid.Column="2" Margin="5,5,5,5" />
                        <TextBox x:Name="txtEstado" Grid.Row="4" Grid.Column="3" Margin="5,5,10,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                        <Label Content="UF" Grid.Row="4" Grid.Column="4" Margin="5,5,85,5" />
                        <ComboBox x:Name="cmbUF" Grid.Row="4" Grid.Column="5" Margin="5,5,144,5" TabIndex="1" SelectedIndex="0"/>

                        <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="5" HorizontalAlignment="Left" Margin="24,20,0,0" Width="225">
                            <Button x:Name="btnSalvar" TabIndex="0" Content="_Salvar" Style="{StaticResource EstiloBotaoSalvar}" Click="Button_Click" Margin="5"/>
                            <Button x:Name="btnCancelar" TabIndex="1" Content="_Cancelar" Style="{StaticResource EstiloBotaoCancelar}" Click="Button_Click" Margin="5"/>
                            <Button x:Name="btnLimpar" TabIndex="2" Content="_Limpar" Style="{StaticResource EstiloBotaoLimpar}" Click="Button_Click" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabItemProdutos" Header="Produtos" TabIndex="2" Style="{StaticResource EstiloTabCaProdutos}">
                    <TextBlock Text="Carregando tela de produtos...."
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16" FontStyle="Italic"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>