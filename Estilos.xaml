<!-- Estilos.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="EstiloPadraoBotao" TargetType="Button">
        <Setter Property="Height" Value="115"/>
        <Setter Property="Width" Value="144"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="Opacity" Value="0.75"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF77ADF9" Offset="0.245"/>
                    <GradientStop Color="#FF3E7FD9"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="EstiloTabCaProdutos" TargetType="TabItem">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
    </Style>
    <Style x:Key="EstiloBotaoSalvar" TargetType="Button">
        <Setter  Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="Background" Value="GreenYellow"/>
    </Style>
    <Style x:Key="EstiloBotaoCancelar" TargetType="Button">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="Background" Value="PaleVioletRed"/>
    </Style>
    <Style x:Key="EstiloBotaoLimpar" TargetType="Button">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="Background" Value="Orange"/>
    </Style>
    <Style x:Key="EstiloBotaoSair" TargetType="Button">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="WhiteSmoke"/>
        <Setter Property="Width" Value="83" />
        <Setter Property="Height" Value="71"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="Opacity" Value="0.75"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
    </Style>
    <Style x:Key="EstiloDataeHora" TargetType="Label">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        
    </Style>
</ResourceDictionary>