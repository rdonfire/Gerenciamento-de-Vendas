<!-- Window principal da tela de Produtos -->
<Window x:Class="Gerenciador_de_Vendas.Produtos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gerenciador_de_Vendas"
        mc:Ignorable="d"
        Title="Produtos"
        Width="1420" Height="800"
        WindowState="Maximized">
    <Grid Margin="0,0,0,8">

        <Border BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3E7FD9"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="553*"/>
                <ColumnDefinition Width="74*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="88*"/>
                <RowDefinition Height="657*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblDataHora" Content="Atualizando..." Style="{StaticResource EstiloDataeHora}" />
            <Button x:Name="btnSair" Content="_SAIR" TabIndex="3"  Style="{StaticResource EstiloBotaoSair}"
                    HorizontalAlignment="Left" Click="Button_Click"  Margin="37,0,0,0" Grid.Column="1"/>
        </Grid>
        <Grid>
            <Grid>
                <Border BorderBrush="Black" BorderThickness="1" Margin="10,93,207,0" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="434*"/>
                            <ColumnDefinition Width="291*"/>
                            <ColumnDefinition Width="310*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Pesquisar" Grid.Column="0" Margin="10,-2,335,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" FontFamily="Tw Cen MT" Grid.ColumnSpan="2" Height="32"/>
                        <TextBox x:Name="txtProdutoPesquisar" Grid.Column="0" Margin="10,30,188,5" TextWrapping="Wrap" Grid.ColumnSpan="2" />
                        <Button x:Name="btnPesquisarProdutos" Grid.Column="3" Content="BtnPesquisar" Margin="119,25,32,8" />
                        <ComboBox x:Name="cmbCategoriaPesquisar" Grid.Column="2" Margin="22,30,0,5" />
                        <Label Content="Selecione a categoria:" Grid.Column="2" Margin="22,-2,82,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" FontFamily="Tw Cen MT" Height="36"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid>
            <TabControl x:Name="tabControlPrincipal" Margin="10,197,207,26" SelectionChanged="tabControlPrincipal_SelectionChanged">
                <TabItem Header="Produtos" TabIndex="0" Style="{StaticResource EstiloTabCaProdutos}">
                    <Grid>
                        <DataGrid Grid.Row="1" x:Name="gridPrincipal" AutoGenerateColumns="True" Margin="10" />
                    </Grid>
                </TabItem>
                <TabItem Header="Incluir Produtos" TabIndex="1" Style="{StaticResource EstiloTabCaProdutos}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto" MinWidth="201"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Content="ID" Grid.Row="0" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox  x:Name="txtID" Grid.Row="0" Grid.Column="1" Margin="5,5,136,5"/>


                        <Label Content="Codigo de Barras" Grid.Row="1" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtCdBarras" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5"/>
                        <Label Content="Categoria" Grid.Row="1" Grid.Column="2" Margin="41,5,13,5" HorizontalAlignment="Right"/>
                        <ComboBox x:Name="cmbCategoria" Grid.Row="1"  Grid.Column="3" Margin="12,5,189,5"/>

                        <Label Content="Nome" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtProduto" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,5,5,5"/>

                        <Label Content="Fornecedor" Grid.Row="3" Grid.Column="0" Margin="5,5,5,5"/>
                        <ComboBox x:Name="cmbFornecedor" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5"/>

                        <Label Content="Preço Fornecedor" Grid.Row="4" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtPrecoFornecedor" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5"/>

                        <Label Content="Markup %" Grid.Row="5" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtMarkup" Grid.Row="5" Grid.Column="1" Margin="5,5,5,5"/>
                        <Button x:Name="btnMarkupCaProduto" Content="Aplicar Markup" Grid.Row="5" Grid.Column="2"
                                Margin="5,5,0,5" Width="150" HorizontalAlignment="Left" Background="Gray" 
                                Click="Button_Click" TabIndex="4"/>

                        <Label Content="Preço de Venda" Grid.Row="6" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtPrecoVenda" Grid.Row="6" Grid.Column="1" Margin="5,5,5,5"/>

                        <Label Content="Descrição" Grid.Row="7" Grid.Column="0" Margin="5,5,5,5"/>
                        <TextBox x:Name="txtDescricao" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,5,5,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                        <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Left" Margin="160,20,0,0" Width="225">
                            <Button x:Name="btnSalvarCaProduto" TabIndex="0" Content="_Salvar" Margin="5" Style="{StaticResource EstiloBotaoSalvar}" Click="Button_Click" />
                            <Button x:Name="btnCancelar" Content="_Cancelar" TabIndex="1" Margin="5" Style="{StaticResource EstiloBotaoCancelar}" Click="Button_Click" />
                            <Button x:Name="btnLimpar" Content="_Limpar" TabIndex="2" Margin="5" Style="{StaticResource EstiloBotaoLimpar}" Click="Button_Click" />
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Categorias" TabIndex="2" Style="{StaticResource EstiloTabCaProdutos}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="145*"/>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="1043*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.ColumnSpan="3">
                            <Label Content="Categoria" Margin="0,5,5,0" Grid.Column="0" Grid.Row="2"  VerticalAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Tw Cen MT" Height="36"/>
                            <TextBox x:Name="txtCategoria" MaxLength="25" TextAlignment="Justify" Margin="0,5,0,5" Width="250" />
                            <Button x:Name="btnCatSalvar" Margin="5,5,5,5" Content="_Salvar" TabIndex="5" Style="{StaticResource EstiloBotaoSalvar}" Click="Button_Click" />
                            <Button x:Name="btnCatCancelar" Content="_Cancelar" Margin="0,5,5,5" TabIndex="1" Style="{StaticResource EstiloBotaoCancelar}" Click="Button_Click" />
                        </StackPanel>

                        <DataGrid Grid.Row="1" x:Name="gridCategoria" AutoGenerateColumns="True" Margin="10,10,10,10" Grid.ColumnSpan="3" />

                    </Grid>
                </TabItem>
                <TabItem Header="Fornecedores" TabIndex="3" Style="{StaticResource EstiloTabCaProdutos}">
                    <Grid>
                        <TextBlock Text="Carregando lista de fornecedores..."
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"/>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</Window>